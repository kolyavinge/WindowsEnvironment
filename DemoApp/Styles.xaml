<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="MainPanelTabControlStyle" TargetType="{x:Type TabControl}">
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <Style x:Key="PanelTabControlStyle" TargetType="{x:Type TabControl}">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="TabStripPlacement" Value="Bottom" />
    </Style>

    <Style x:Key="HorizontalSplitterStyle" TargetType="{x:Type GridSplitter}">
        <Setter Property="ShowsPreview" Value="True" />
        <Setter Property="Height" Value="5" />
    </Style>

    <Style x:Key="VerticalSplitterStyle" TargetType="{x:Type GridSplitter}">
        <Setter Property="ShowsPreview" Value="True" />
        <Setter Property="Width" Value="5" />
    </Style>

</ResourceDictionary>
    